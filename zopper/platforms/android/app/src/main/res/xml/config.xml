<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="com.assignment.employee" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>Employee Report</name>
    <description>
      Application that shows employees reports
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash density="land-hdpi" src="res/screens/android/drawable-hdpi/message-splash_l.png" />
    <splash density="land-mdpi" src="res/screens/android/drawable-mdpi/message-splash_l.png" />
    <splash density="land-xhdpi" src="res/screens/android/drawable-xhdpi/message-splash_l.png" />
    <splash density="land-xxhdpi" src="res/screens/android/drawable-xxhdpi/message-splash_l.png" />
    <splash density="land-xxxhdpi" src="res/screens/android/drawable-xxxhdpi/message-splash_l.png" />
    <splash density="port-hdpi" src="res/screens/android/drawable-hdpi/message-splash_p.png" />
    <splash density="port-mdpi" src="res/screens/android/drawable-mdpi/message-splash_p.png" />
    <splash density="port-xhdpi" src="res/screens/android/drawable-xhdpi/message-splash_p.png" />
    <splash density="port-xxhdpi" src="res/screens/android/drawable-xxhdpi/message-splash_p.png" />
    <splash density="port-xxxhdpi" src="res/screens/android/drawable-xxxhdpi/message-splash_p.png" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="ShowSplashScreen" value="true" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="loadUrlTimeoutValue" value="700000" />
</widget>
